{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{if .Root}}âš¡ {{end}}{{.Folder}} - {{.Shell | replace \"pwsh\" \"Powershell\"}} {{.ShellVersion}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:foreground",
          "template": "<p:block>\u250f[</>{{ .UserName }}<p:block>]</>"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:foreground",
          "template": "{{ if .Env.POSH_GIT_STRING }}<p:block>-</>{{ .Env.POSH_GIT_STRING }}{{ end }}"
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "yellow",
          "template": "<p:block>-[</>\uf0e7<p:block>]</>"
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "p:foreground",
          "template": "<p:block>-[</>x{{ .Meaning }}<p:block>]</>"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:foreground",
          "template": "<p:block>-[</>\udb81\udd1b {{ .FormattedMs }}<p:block>]</>",
          "properties": {
            "style": "roundrock",
            "threshold": 0
          }
        },
        {
          "type": "dotnet",
          "style": "plain",
          "foreground": "p:foreground",
          "template": "<p:block>-[</>\ue77f {{ .Full }}<p:block>]</>"
        },
        {
          "type": "docker",
          "style": "plain",
          "foreground": "p:foreground",
          "template": "<p:block>-[</>\ue650 {{ .Context }}<p:block>]</>"
        },
        {
          "type": "upgrade",
          "style": "plain",
          "foreground": "yellow",
          "template": "<p:block>-[</>\udb82\ude0a {{ .Version }}<p:block>]</>"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:foreground",
          "template": "<p:block>\u2516[</>{{ .Path }}<p:block>]</>",
          "properties": {
            "style": "full"
          }
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "p:foreground",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:error{{ end }}"
          ],
          "template": "$",
          "properties": {
            "always_enabled": true
          }
        }
      ],
      "newline": true
    }
  ],
  "secondary_prompt": {
    "foreground": "p:foreground",
    "template": "> "
  },
  "debug_prompt": {
    "foreground": "p:foreground"
  },
  "palette": {
    "block": "darkGray",
    "block-dir": "green",
    "error": "red",
    "foreground": "#88c0d0",
    "foreground-misc": "#d8dee9",
    "root": "lightYellow"
  }
}
