{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "block": "darkGray",
    "block-dir": "green",
    "error": "red",
    "foreground": "#88c0d0",
    "foreground-misc": "#d8dee9",
    "root": "lightYellow"
  },
  "debug_prompt": {
    "foreground": "p:foreground"
  },
  "secondary_prompt": {
    "template": "> ",
    "foreground": "p:foreground"
  },
  "console_title_template": "{{if .Root}}âš¡ {{end}}{{.Folder}} - {{.Shell | replace \"pwsh\" \"Powershell\"}} {{.ShellVersion}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "<p:block>\u250f[</>{{ .UserName }}<p:block>]</>",
          "foreground": "p:foreground",
          "type": "session"
        },
        {
          "properties": {
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "foreground": "p:foreground",
          "type": "git",
          "templates": [
            "{{ if .Env.POSH_GIT_STRING }}",
            "<p:block>-[</>",
            "{{ .UpstreamIcon }} {{ .Env.POSH_GIT_STRING }}",
            "<p:block>]</>",
            "{{ end }}"
          ]
        },
        {
          "style": "plain",
          "template": "<p:block>-[</>\uf0e7<p:block>]</>",
          "foreground": "yellow",
          "type": "root"
        },
        {
          "style": "plain",
          "template": "<p:block>-[</>x{{ .Meaning }}<p:block>]</>",
          "foreground": "p:foreground",
          "type": "exit"
        },
        {
          "properties": {
            "style": "roundrock",
            "threshold": 0
          },
          "style": "plain",
          "template": "<p:block>-[</>\udb81\udd1b {{ .FormattedMs }}<p:block>]</>",
          "foreground": "p:foreground",
          "type": "executiontime"
        },
        {
          "style": "plain",
          "template": "<p:block>-[</>\ue77f {{ .Full }}<p:block>]</>",
          "foreground": "p:foreground",
          "type": "dotnet"
        },
        {
          "style": "plain",
          "template": "<p:block>-[</>\ue650 {{ .Context }}<p:block>]</>",
          "foreground": "p:foreground",
          "type": "docker"
        },
        {
          "style": "plain",
          "template": "<p:block>-[</>\udb82\ude0a {{ .Version }}<p:block>]</>",
          "foreground": "yellow",
          "type": "upgrade"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "<p:block>\u2516[</>{{ .Path }}<p:block>]</>",
          "foreground": "p:foreground",
          "type": "path"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "$",
          "foreground": "p:foreground",
          "type": "exit",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:error{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
