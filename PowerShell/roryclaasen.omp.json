{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Root}}\u26a1 {{end}}{{.Folder}} - {{.Shell | replace \"pwsh\" \"Powershell\"}} {{.ShellVersion}}",
  "palette": {
    "foreground": "#88c0d0",
    "foreground-misc": "#d8dee9",
    "block": "darkGray",
    "block-dir": "green",
    "root": "lightYellow",
    "error": "red"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:foreground",
          "style": "plain",
          "template": "<p:block>\u250f[</>{{ .UserName }}<p:block>]</>",
          "type": "session"
        },
        {
          "foreground": "p:foreground",
          "style": "plain",
          "type": "text",
          "template": "{{ if .Env.POSH_GIT_STRING }}<p:block>-</>{{ .Env.POSH_GIT_STRING }}{{ end }}"
        },
        {
          "foreground": "yellow",
          "style": "plain",
          "template": "<p:block>-[</>\uf0e7<p:block>]</>",
          "type": "root"
        },
        {
          "foreground": "p:foreground",
          "style": "plain",
          "template": "<p:block>-[</>x{{ .Meaning }}<p:block>]</>",
          "type": "exit"
        },
        {
          "foreground": "p:foreground",
          "style": "diamond",
          "template": "<p:block>-[</>\ufa1e {{ .FormattedMs }}<p:block>]</>",
          "type": "executiontime",
          "properties": {
            "style": "roundrock",
            "threshold": 0
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:foreground",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "<p:block>\u2516[</>{{ .Path }}<p:block>]</>",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:foreground",
          "foreground_templates": ["{{ if gt .Code 0 }}p:error{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "$",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "secondary_prompt": {
    "foreground": "p:foreground",
    "template": "> "
  },
  "debug_prompt": {
    "foreground": "p:foreground"
  },
  "final_space": true,
  "version": 2
}
