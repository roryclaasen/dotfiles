{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "var": {
    "ShowSandbox": true
  },
  "palette": {
    "block": "darkGray",
    "block-dir": "green",
    "error": "red",
    "foreground": "#88c0d0",
    "foreground-misc": "#d8dee9",
    "root": "lightYellow"
  },
  "debug_prompt": {
    "foreground": "p:foreground"
  },
  "secondary_prompt": {
    "template": "> ",
    "foreground": "p:foreground"
  },
  "console_title_template": "{{if .Root}}⚡ {{end}}{{.Folder}} - {{.Shell}} {{.ShellVersion}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "<p:block>┏</>"
        },
        {
          "type": "session",
          "style": "plain",
          "template": "<p:block>[</>{{ .UserName }}<p:block>]</>",
          "foreground": "p:foreground"
        },
        {
          "type": "git",
          "style": "plain",
          "options": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "source": "cli",
            "branch_icon": " ",
            "branch_identical_icon": "≡",
            "branch_behind_icon": "⇣",
            "branch_ahead_icon": "⇡"
          },
          "foreground": "p:foreground",
          "templates": [
            "<p:block>-[</>",
            "{{ url .UpstreamIcon .UpstreamURL }} ",
            "{{ .HEAD }}",
            "{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}",
            "{{ if .Staging.Changed }} <green>{{ .Staging.String }}</>{{ end }}",
            "{{ if and (.Working.Changed) (.Staging.Changed) }} <p:block>|</p>{{ end }}",
            "{{ if .Working.Changed }} <red>{{ .Working.String }}</>{{ end }}",
            "<p:block>]</>"
          ]
        },
        {
          "type": "root",
          "style": "plain",
          "template": "<p:block>-[</><p:block>]</>",
          "foreground": "yellow"
        },
        {
          "type": "status",
          "style": "plain",
          "template": "<p:block>-[</>x{{ .Meaning }}<p:block>]</>",
          "foreground": "p:foreground"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "options": {
            "style": "roundrock",
            "threshold": 0
          },
          "foreground": "p:foreground",
          "template": "<p:block>-[</>  {{ .FormattedMs }}<p:block>]</>"
        },
        {
          "type": "dotnet",
          "style": "plain",
          "foreground": "#b915ff",
          "template": "<p:block>-[</> {{ .Full }}<p:block>]</>"
        },
        {
          "type": "java",
          "style": "plain",
          "foreground": "#f6901d",
          "template": "<p:block>-[</> {{ .Full }}<p:block>]</>"
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#709d53",
          "template": "<p:block>-[</>󰎙 {{ .Full }}<p:block>]</>"
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#906cff",
          "template": "<p:block>-[</> {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}<p:block>]</>"
        },
        {
          "type": "docker",
          "style": "plain",
          "foreground": "#1c90ed",
          "template": "<p:block>-[</> {{ .Context  }}<p:block>]</>"
        },
        {
          "type": "winreg",
          "style": "plain",
          "options": {
            "path": "HKLM\\SOFTWARE\\Microsoft\\XboxLive\\Sandbox",
            "fallback": "RETAIL"
          },
          "foreground": "#14a314",
          "template": "{{ if .Var.ShowSandbox }}<p:block>-[</> {{ .Value }}<p:block>]</>{{ end }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "<p:block>┖</>"
        },
        {
          "type": "path",
          "style": "plain",
          "options": {
            "style": "full"
          },
          "foreground": "p:foreground",
          "template": "<p:block>[</>{{ .Path }}<p:block>]</>"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "options": {
            "always_enabled": true
          },
          "template": "$",
          "foreground": "p:foreground",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:error{{ end }}"
          ]
        }
      ],
      "force": true,
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
